---
import { getCollection } from 'astro:content';
import { Image } from 'astro:assets';
import BaseHead from '../../components/BaseHead.astro';
import Header from '../../components/Header.astro';
import Footer from '../../components/Footer.astro';
import FormattedDate from '../../components/FormattedDate.astro';

// Helper function to decode HTML entities
function decodeHtmlEntities(text: string): string {
	const entities: Record<string, string> = {
		'&#46;': '.',
		'&amp;': '&',
		'&lt;': '<',
		'&gt;': '>',
		'&quot;': '"',
		'&#39;': "'",
		'&nbsp;': ' ',
		'&#8217;': "'",
		'&#8220;': '"',
		'&#8221;': '"',
		'&#8230;': '...',
		'&#8211;': '–',
		'&#8212;': '—',
	};
	
	return text.replace(/&[#\w]+;/g, (entity) => entities[entity] || entity);
}

export async function getStaticPaths() {
	const posts = await getCollection('blog');
	
	// Get all unique categories (lowercase)
	const categories = new Set<string>();
	posts.forEach(post => {
		if (post.data.categories) {
			post.data.categories.forEach(category => categories.add(category.toLowerCase()));
		}
	});
	
	// Create a path for each category
	return Array.from(categories).map(category => ({
		params: { category },
		props: { 
			category,
			posts: posts
				.filter(post => post.data.categories?.some(cat => cat.toLowerCase() === category))
				.sort((a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf())
		}
	}));
}

const { category, posts } = Astro.props;
const title = `Posts in ${category}`;
const description = `All blog posts categorized under ${category}`;
---

<html lang="en">
	<head>
		<BaseHead title={title} description={description} />
		<style>
			main {
				width: 100%;
			}
			.category-header {
				width: 720px;
				max-width: calc(100% - 2em);
				margin: 2em auto;
				padding: 0 1em;
			}
			.category-header h1 {
				margin-bottom: 0.5em;
				color: rgb(var(--gray-dark));
			}
			.category-header p {
				color: rgb(var(--gray));
				font-size: 1.1rem;
			}
			.posts-grid {
				width: 720px;
				max-width: calc(100% - 2em);
				margin: 2em auto;
				padding: 0 1em;
				display: grid;
				grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
				gap: 2em;
			}
			.post-card {
				border: 1px solid rgb(var(--gray-light));
				border-radius: 8px;
				overflow: hidden;
				text-decoration: none;
				color: rgb(var(--gray-dark));
				transition: all 0.2s ease;
				display: flex;
				flex-direction: column;
			}
			.post-card:hover {
				box-shadow: var(--box-shadow);
				border-color: rgb(var(--accent));
				transform: translateY(-4px);
			}
			.post-card img {
				width: 100%;
				height: 200px;
				object-fit: cover;
			}
			.post-card-content {
				padding: 1.5em;
				flex: 1;
				display: flex;
				flex-direction: column;
			}
			.post-card-title {
				font-weight: 700;
				font-size: 1.25rem;
				margin-bottom: 0.5em;
				line-height: 1.3;
			}
			.post-card-description {
				color: rgb(var(--gray));
				margin-bottom: 1em;
				flex: 1;
				font-size: 0.95rem;
			}
			.post-card-meta {
				display: flex;
				justify-content: space-between;
				align-items: center;
				font-size: 0.875rem;
				color: rgb(var(--gray));
				padding-top: 1em;
				border-top: 1px solid rgb(var(--gray-light));
			}
			.post-categories {
				display: flex;
				flex-wrap: wrap;
				gap: 0.5em;
			}
			.category-tag {
				display: inline-block;
				padding: 0.25em 0.5em;
				background-color: var(--accent);
				color: white;
				border-radius: 4px;
				font-size: 0.75rem;
				font-weight: 500;
			}
		</style>
	</head>
	<body>
		<Header />
		<main>
			<div class="category-header">
				<h1>{title}</h1>
				<p>{posts.length} {posts.length === 1 ? 'post' : 'posts'} found</p>
			</div>
			
			<div class="posts-grid">
				{posts.map((post) => (
					<a href={`/${post.id}/`} class="post-card">
						{post.data.heroImage && (
							<Image 
								width={400} 
								height={200} 
								src={post.data.heroImage} 
								alt={post.data.title} 
							/>
						)}
						<div class="post-card-content">
							<h2 class="post-card-title">{post.data.title}</h2>
							<p class="post-card-description">{decodeHtmlEntities(post.data.description)}</p>
							<div class="post-card-meta">
								<FormattedDate date={post.data.pubDate} />
								{post.data.categories && post.data.categories.length > 0 && (
									<div class="post-categories">
										{post.data.categories.map((cat) => (
											<span class="category-tag">{cat}</span>
										))}
									</div>
								)}
							</div>
						</div>
					</a>
				))}
			</div>
		</main>
		<Footer />
	</body>
</html>
