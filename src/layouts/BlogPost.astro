---
import { Image } from 'astro:assets';
import type { CollectionEntry } from 'astro:content';
import BaseHead from '../components/BaseHead.astro';
import Footer from '../components/Footer.astro';
import FormattedDate from '../components/FormattedDate.astro';
import Header from '../components/Header.astro';
import PageLayout from '../components/PageLayout.astro';

type Props = CollectionEntry<'blog'>['data'] & {
	prevPost?: CollectionEntry<'blog'> | null;
	nextPost?: CollectionEntry<'blog'> | null;
	relatedPosts?: CollectionEntry<'blog'>[];
};

const { title, description, pubDate, updatedDate, heroImage, categories, prevPost, nextPost, relatedPosts } = Astro.props;
---

<html lang="en">
	<head>
		<BaseHead title={title} description={description} />
		<style>
			main {
				width: calc(100% - 2em);
				max-width: 100%;
				margin: 0;
			}
			.hero-image {
				width: 100%;
			}
			.hero-image img {
				display: block;
				margin: 0 auto;
				border-radius: 12px;
				box-shadow: var(--box-shadow);
			}
			.prose {
				width: 720px;
				max-width: calc(100% - 2em);
				margin: auto;
				padding: 1em;
				color: rgb(var(--gray-dark));
			}
			.title {
				margin-bottom: 1em;
				padding: 1em 0;
				text-align: center;
				line-height: 1;
			}
			.title h1 {
				margin: 0 0 0.5em 0;
			}
			.date {
				margin-bottom: 0.5em;
				color: rgb(var(--gray));
			}
			.last-updated-on {
				font-style: italic;
			}
			.categories {
				display: flex;
				flex-wrap: wrap;
				gap: 0.5em;
				margin-bottom: 1em;
				justify-content: center;
			}
			.category-tag {
				display: inline-block;
				padding: 0.25em 0.75em;
				background-color: var(--accent);
				color: white;
				border-radius: 4px;
				text-decoration: none;
				font-size: 0.875rem;
				font-weight: 500;
				transition: all 0.2s ease;
			}
			.category-tag:hover {
				opacity: 0.8;
				transform: translateY(-2px);
			}
			.post-navigation {
				width: 720px;
				max-width: calc(100% - 2em);
				margin: 2em auto;
				display: flex;
				justify-content: space-between;
				gap: 1em;
				padding: 1em;
				border-top: 1px solid rgb(var(--gray-light));
			}
			.post-navigation a {
				flex: 1;
				padding: 1em;
				border: 1px solid rgb(var(--gray-light));
				border-radius: 8px;
				text-decoration: none;
				color: rgb(var(--gray-dark));
				transition: all 0.2s ease;
			}
			.post-navigation a:hover {
				border-color: rgb(var(--accent));
				box-shadow: var(--box-shadow);
			}
			.post-navigation .nav-label {
				font-size: 0.875rem;
				color: rgb(var(--gray));
				margin-bottom: 0.5em;
			}
			.post-navigation .nav-title {
				font-weight: 600;
			}
			.post-navigation .prev {
				text-align: left;
			}
			.post-navigation .next {
				text-align: right;
			}
			.related-posts {
				width: 720px;
				max-width: calc(100% - 2em);
				margin: 2em auto;
				padding: 1em;
			}
			.related-posts h3 {
				margin-bottom: 1em;
				color: rgb(var(--gray-dark));
			}
			.related-posts-grid {
				display: grid;
				grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
				gap: 1em;
			}
			.related-post-card {
				border: 1px solid rgb(var(--gray-light));
				border-radius: 8px;
				overflow: hidden;
				text-decoration: none;
				color: rgb(var(--gray-dark));
				transition: all 0.2s ease;
			}
			.related-post-card:hover {
				box-shadow: var(--box-shadow);
				border-color: rgb(var(--accent));
			}
			.related-post-card img {
				width: 100%;
				height: 150px;
				object-fit: cover;
			}
			.related-post-content {
				padding: 1em;
			}
			.related-post-title {
				font-weight: 600;
				margin-bottom: 0.5em;
				font-size: 0.95rem;
			}
			.related-post-date {
				font-size: 0.875rem;
				color: rgb(var(--gray));
			}
		</style>
	</head>

	<body>
		<PageLayout>
			<article>
				<div class="hero-image">
					{heroImage && <Image width={1020} height={510} src={heroImage} alt="" />}
				</div>
				<div class="prose">
					<div class="title">
						<div class="date">
							<FormattedDate date={pubDate} />
							{
								updatedDate && (
									<div class="last-updated-on">
										Last updated on <FormattedDate date={updatedDate} />
									</div>
								)
							}
						</div>
						<h1>{title}</h1>
						{categories && categories.length > 0 && (
							<div class="categories">
								{categories.map((category) => (
									<a href={`/category/${category.toLowerCase()}/`} class="category-tag">
										{category}
									</a>
								))}
							</div>
						)}
						<hr />
					</div>
					<slot />
				</div>
				
				<!-- Previous/Next Navigation -->
				{(prevPost || nextPost) && (
					<nav class="post-navigation">
						{prevPost && (
							<a href={`/${prevPost.id}/`} class="prev">
								<div class="nav-label">← PREVIOUS</div>
								<div class="nav-title">{prevPost.data.title}</div>
							</a>
						)}
						{nextPost && (
							<a href={`/${nextPost.id}/`} class="next">
								<div class="nav-label">NEXT →</div>
								<div class="nav-title">{nextPost.data.title}</div>
							</a>
						)}
					</nav>
				)}
				
				<!-- Related Posts -->
				{relatedPosts && relatedPosts.length > 0 && (
					<section class="related-posts">
						<h3>You may also like...</h3>
						<div class="related-posts-grid">
							{relatedPosts.map((relatedPost) => (
								<a href={`/${relatedPost.id}/`} class="related-post-card">
									{relatedPost.data.heroImage && (
										<Image 
											width={300} 
											height={150} 
											src={relatedPost.data.heroImage} 
											alt={relatedPost.data.title} 
										/>
									)}
									<div class="related-post-content">
										<div class="related-post-title">{relatedPost.data.title}</div>
										<div class="related-post-date">
											<FormattedDate date={relatedPost.data.pubDate} />
										</div>
									</div>
								</a>
							))}
						</div>
					</section>
				)}
			</article>
		</PageLayout>
	</body>
</html>
